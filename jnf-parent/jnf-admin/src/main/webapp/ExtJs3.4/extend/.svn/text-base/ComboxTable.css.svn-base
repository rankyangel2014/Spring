/*
	filterRow by JNGF
*/

.filter-row .filterInput{
	height:27px;
	border:0px solid #ff0000;	
}
.filter-row .filterInput  .x-panel{
	padding-top:8px;
}
.filter-row .filterInput .x-panel-body{
	background:transparent;
}
.filter-row .x-grid3-hd-inner,
.filter-row .x-grid3-hd-inner>.x-panel-body{
	background:url(../images/filterRow/grid3-hrow.gif) repeat-x;
}
.filter-row td.x-grid3-hd-over>.x-grid3-hd-inner{
	background:url(../images/filterRow/grid3-hrow-over.gif) repeat-x;
}
.filter-row td.sort-desc .x-grid3-hd-inner,
.filter-row td.sort-asc .x-grid3-hd-inner{
	background:url(../images/filterRow/grid3-hrow2-over.gif) repeat-x;
}