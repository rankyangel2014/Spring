//回显理财详细信息
com.jsjn.jnf.config.UpdateChannelConfigMggr.panelInit=function(record){
	
	com.jsjn.jnf.config.UpdateChannelConfigMggr.channelId = record.data.channelId;			//序号
	var channelId = record.data.channelId;			
	var channelName = record.data.channelName;		
	var fee = record.data.fee;
	var channelType = record.data.channelType;

	Ext.getCmp('channelId.UpdateChannelConfigMggr').setValue(channelId);
