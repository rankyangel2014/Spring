//修改
com.jsjn.jnf.config.UpdateChannelConfigMggr.update = function() {
	
	var channelId =  Ext.getCmp('channelId.UpdateChannelConfigMggr').getValue();
	var channelName = Ext.getCmp('channelName.UpdateChannelConfigMggr').getValue();
	var fee = Ext.getCmp('fee.UpdateChannelConfigMggr').getValue();
	var channelType = Ext.getCmp('channelType.UpdateChannelConfigMggr').getValue();
	
	if(valueIsEmpty(channelId)){
		Ext.Msg.alert('系统提示', '渠道编号不能为空!');
		return false;
	}
	if(valueIsEmpty(channelName)){
		Ext.Msg.alert('系统提示', '渠道名称不能为空!');
		return false;
	}
	if(valueIsEmpty(fee)){
		Ext.Msg.alert('系统提示', '第三方渠道收费（笔）不能为空!');
		return false;
	}
	
	var url = 'jnf/channelService.do?method=updateChannel';
	var param = {'channelId':channelId,
				'channelName':channelName,			
				'fee':fee,			
				'channelType':channelType		
				};
	ajaxLoad(url, param, '', '', '', function(response) {
		var success = Ext.decode(response.responseText).success;
		var resMsg = Ext.decode(response.responseText).resMsg;
//		var temp = Ext.decode(response.responseText).root;
		if(success){
			Ext.getCmp('grid.ChannelConfigListMgr')
				.getStore().reload();
			Ext.Msg.alert("系统提示", "修改成功！", function() {
				com.jsjn.jnf.config.UpdateChannelConfigMggr
					.WINDOW.hide();
					});
		}else{
			Ext.Msg.alert("系统提示", "修改失败！"+resMsg, function(){});
		}
	
	});
};